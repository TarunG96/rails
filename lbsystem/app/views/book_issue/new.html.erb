<body>
	<%= render partial: "admin/header" %>
	<%= render partial: "admin/lframe" %>
	<div name="right_frame" align="center" style="float:left; border:2px solid black; width:881px; height:480px;">
		<h1>Enter Issue Details</h1>
      <%= form_for @book_issue do |b| %>
        <p>
          <%= b.label :Student_ID %>
          <%= b.text_field :student_id %>
        </p>
        <p>
          <%= b.label :Book_ID %>
          <%= b.text_field :book_id %>
        </p>
        <p>
          <%= b.label :Issue_date %>
          <%= b.text_field :issue_date %>
        </p>
        <p>
          <%= b.label :Return_date %>
          <%= b.text_field :return_date %>
        </p>
        <p>
          <%= b.submit "ADD" %>
        </p>
        <% end %>
		    <%= link_to 'Back', {:action => 'index'} %>
	</div>
	<div>
	  <%= render partial: "admin/footer" %>
  </div>
</body>
